<Game>:
    name: 'game'

    FloatLayout:
        Image:
            source: './back.png'
            allow_stretch: True
            keep_ratio: False

        ProgressBar:
            id: progress_bar
            color: 1, 0, 1, 1
            value: 0.1
            min: 0
            max: 1
            size_hint_x: 0.67
            pos_hint: {'center_x': .5, 'y': .35}

#        BoxLayout:
#            size_hint: (.67, .6)
#            pos_hint: {'center_x': .5, 'center_y': .5}

        Label:
            id: q
            font_name: './regular.ttf'
            text: ''
            size_hint: None, None
            size: (1280, 760)
            text_size: self.size
            font_size: 30
            halign: 'center'
            valign: 'middle'


#            Image:
#                opacity: 1
#                id: img
#                source: ''
#                allow_stretch: True
#                keep_ratio: False

        Button:
            id: resonate
            size_hint: (.2, .06)
            text: 'Резонирует!'
            pos_hint: {'center_x': .7, 'center_y': .1}
            on_press: root.ftb_press(1)

        Button:
            id: no_resonate
            size_hint: (.2, .06)
            text: 'НЕ резонирует!'
            pos_hint: {'center_x': .3, 'center_y': .1}
            on_press: root.ftb_press(-1)

        Button:
            id: back_register
            size_hint: (.09, .06)
            text: 'Выйти'
            font_size: 10
            pos_hint: {'center_x': .04, 'center_y': .033}
            on_press: root.back_login_page()