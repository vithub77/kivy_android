<Container>:
    Image:
        source: '/Users/one/Dev/samolet/back.png'
        size: self.texture_size

    TextInput:
        multiline: False
        font_size: 40
        size_hint: 0.15, 0.05
        pos_hint: {'x':.4, 'y':.6}


    Button:
        size_hint: 0.1, 0.05
        text: 'Hello'
        pos_hint: {'x':.5, 'y':.1}



    Button:
        size_hint: 0.1, 0.05
        text: 'World'
        pos_hint: {'x':.2, 'y':.1}

<LoginScreen>:
    name: 'register'

    Image:
        source: '/Users/one/Dev/samolet/back.png'
        size: self.texture_size

    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.3, 0.5
        pos_hint: {'x':.3, 'y':.3}

        Label:
            text: 'Регистрация'
            font_size: 50
            bold: True

        GridLayout:
            cols: 2
            padding: 1
            spacing: 1
            margin: 0
            row_force_default: True
            row_default_height: 40

            Label:
                text: 'Name:'
            TextInput:
                id: name_input
                hint_text: 'Enter your name'

            Label:
                text: 'Phone:'
            TextInput:
                id: phone_input
                hint_text: 'Enter your phone number'

            Label:
                text: 'Email:'
            TextInput:
                id: email_input
                hint_text: 'Enter your email'

        Button:
            text: 'Войти'
            on_press: root.register_user()
            size_hint_y: None
            size_hint_x: 0.4
            pos_hint: {'x':.4, 'y':.0}
            height: 40

        Button:
            text: 'очистить'
            on_release: root.clear_field()
            size_hint_y: None
            size_hint_x: 0.4
            pos_hint: {'x':.4, 'y':.0}
            height: 40