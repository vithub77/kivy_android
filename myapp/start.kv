<LoginScreen>:
    name: 'register'

    Image:
        source: '/Users/one/Dev/samolet/back.png'
        size: self.texture_size

    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.3, 0.5
        pos_hint: {'x':.35, 'y':.3}

        Label:
            text: 'Регистрация'
            font_size: 70
            bold: True

        BoxLayout:
            orientation: 'vertical'
            padding: [0, 0, 0, 0]
            row_force_default: True
            row_default_height: 40


            TextInput:
                padding: [0, 0, 0, 0]
                id: name_input
                hint_text: 'Enter your name'


            TextInput:
                id: phone_input
                hint_text: 'Enter your phone number'
                input_type: 'number'
                input_filter: 'int'

            TextInput:
                id: email_input
                hint_text: 'Enter your email'

        Button:
            text: 'Войти'
            on_press: root.register_user()
            size_hint_y: None
            size_hint_x: 0.4
            pos_hint: {'x':.4, 'y':.0}
            height: 40

        Button:
            text: 'очистить'
            on_release: root.clear_field()
            size_hint_y: None
            size_hint_x: 0.4
            pos_hint: {'x':.4, 'y':.0}
            height: 40