<Button>
    font_size: 20
    background_normal: ''
    background_color: (20/255, 150/255, 255/255, 1)

<TextInput>
    # background_color: (150/255, 150/255, 150/255, 1)
    multiline: False
    font_size: 15
    size_hint: 0.8, 0.06
    pos_hint: {'center_x':.5, 'center_y':.5}



<Welcome>:
    name: "pregame"
    Image:
        source: './back.png'
        allow_stretch: True
        keep_ratio: False


    Label:
        text: 'Добро пожаловать!'
        font_size: 60
        size_hint: 0.15, 0.05
        pos_hint: {'x':.43, 'y':.7}

    Label:
        text: 'Ответить на вопросы и получить призы!'
        font_size: 45
        size_hint: 0.15, 0.05
        pos_hint: {'x':.43, 'y':.6}



    Button:
        size_hint: 0.1, 0.05
        text: 'Откажусь'
        pos_hint: {'x':.25, 'y':.1}
        on_press: root.back_login()



    Button:
        size_hint: 0.1, 0.05
        text: 'Вперед'
        pos_hint: {'x':.65, 'y':.1}
        on_press: root.go_to_game()

<LoginScreen>:
    name: 'register'

    Image:
        source: root.src
        allow_stretch: True
        keep_ratio: False

    Label:
        text: 'Регистрация'
        font_size: 50
        bold: True
        pos_hint: {'center_x':.5, 'y': .25}
        #        canvas.before:
#            Color:
#                rgba: (0, 0, 1, 1)
#            Rectangle:
#                size: 462, 604
#                pos: 1280//2 - 462//2, 800//2 - 604//2

    BoxLayout:
        spacing: 10
        orientation: 'vertical'
        size_hint: 0.36, 0.3
        pos_hint: {'center_x':.5, 'center_y': .5}


        TextInput:
            id: name_input
            hint_text: 'Фамилия и Имя'

        TextInput:
            id: phone_input
            hint_text: 'Телефон: 89999999999'
            input_type: 'number'
            input_filter: 'int'

        TextInput:
            id: email_input
            hint_text: 'email'

        TextInput:
            id: company
            hint_text: 'Компания'

        TextInput:
            id: rang
            hint_text: 'Должность'

    Button:
        text: 'Войти'
        on_press: root.register_user()
        size_hint_y: 0.05
        size_hint_x: 0.2
        pos_hint: {'center_x':.5, 'y': .27}


    Button:
        text: 'Очистить'
        on_release: root.clear_field()
        size_hint_y: 0.05
        size_hint_x: 0.2
        pos_hint: {'center_x':.5, 'y': .19}


<AdminPage>:
    name: 'adminpage'

    Image:
        source: './back.png'
        allow_stretch: True
        keep_ratio: False

    BoxLayout:
        spacing: 20
        orientation: 'vertical'
        pos_hint: {'center_x':.5, 'center_y': .5}

    Button:
        text: 'Выгрузить БД'
        on_press: root.load_bd()
        size_hint_y: 0.05
        size_hint_x: 0.2
        pos_hint: {'center_x':.5, 'y': .27}

    Button:
        text: 'Очистить'
        on_release: root.clear_bd()
        size_hint_y: 0.05
        size_hint_x: 0.2
        pos_hint: {'center_x':.5, 'y': .19}