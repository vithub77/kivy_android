<Welcome>:
    name: "pregame"
    Image:
        source: '/Users/one/Dev/samolet/back.png'
        size: self.texture_size

    Label:
        text: 'Добро пожаловать!'
        font_size: 65
        size_hint: 0.15, 0.05
        pos_hint: {'x':.43, 'y':.7}

    Label:
        text: 'Ответить на вопросы и получить призы!'
        font_size: 40
        size_hint: 0.15, 0.05
        pos_hint: {'x':.43, 'y':.6}


    Button:
        size_hint: 0.1, 0.05
        text: 'Откажусь'
        pos_hint: {'x':.25, 'y':.1}



    Button:
        size_hint: 0.1, 0.05
        text: 'Вперед'
